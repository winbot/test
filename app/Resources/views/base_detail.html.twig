<!-- app/Resources/views/base_detail.html.twig -->
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html"; charset=utf-8" />
    <title>{% block title %}Restaurant "Developers Life"{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('../css/screen.css?<?php echo time(); ?>') }}" type="text/css" rel="stylesheet" />
    {% endblock %}
    <link rel="shortcut icon" href="{{ asset('r3.ico') }}" />
</head>
<body>

<section id="wrapper">
    <header id="header">
        <div class="top">
            {% block navigation %}
                <nav>
                    <ul class="navigation">
                        <li><a href="{{ path('first') }}">Главная</a></li>
                        <li><a href="{{ path('registration') }}">Регистрация</a></li>
                        <li><a href="{{ path('login') }}">Вход</a></li>
                        <li><a href="{{ logout_path('secured_area') }}">Выход</a></li>
                    </ul>
                </nav>
            {% endblock %}
        </div>

        <hgroup>
		    <h2>{% block blog_title %}<a href="{{path('first')}}">Ресторан<br>Developers Life</a>{% endblock %}</h2>
		</hgroup>
    </header>
     <section class="main-menu">
        {% block main_menu %}{% endblock %}
    </section>
</section>
<section>
    <section class="detail-menu">
        {% block detail_menu %}	{% endblock %}
    </section>
    <section class="detail_order">
        {% block detail_order%}	{% endblock %}
    </section>

    <div id="footer">
        {% block footer %}
			<!--Открываем в отдельном окне-->
			Symfony2 test project - created by <a href="#nul" ONCLICK="window.open('https://github.com/winbot/test','','Toolbar=1,Location=0,Directories=0,Status=0,Menubar=0,Scrollbars=1,Resizable=1,Width=max,Height=max');">Vladyslav Bormotov</a>
		{% endblock %}
    </div>
</section>


{% block javascripts %}{% endblock %}
</body>
</html>